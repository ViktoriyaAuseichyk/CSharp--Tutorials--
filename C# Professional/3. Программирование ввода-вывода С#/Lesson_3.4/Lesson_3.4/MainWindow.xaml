<Window x:Class="Lesson_3._4.MainWindow"
        Loaded="OnLoad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson_3._4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="581">
    <Grid Width="500" Height="400">
        <Button x:Name="Check" Content="SAVE" HorizontalAlignment="Center" Height="49" Margin="0,293,0,0" VerticalAlignment="Top" Width="116" Click="Save_Click" FontWeight="Bold"/>
        <TextBox x:Name="Login" HorizontalAlignment="Left" Height="36" Margin="192,136,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="255" TextChanged="Login_TextChanged"/>
        <TextBox x:Name="Password" HorizontalAlignment="Left" Height="36" Margin="192,200,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="255" TextChanged="Password_TextChanged"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="102,141,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="102,205,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

    </Grid>
</Window>
